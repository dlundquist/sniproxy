CC = gcc
CFLAGS = -std=c99 -Wall -Wextra -pedantic -O3 -D_POSIX_C_SOURCE=200809L -g -I ../src -L ../src
TESTS = http.test tls.test buffer.test

all: ${TESTS}

%.test: %.o ../src/%.o
	$(CC) $(CFLAGS) -o $@ $^

%.o: %.c %.h
	$(CC) $(CFLAGS) -c $<

.PHONY: clean all

clean:
	rm -f *.o ${TESTS}

test: all
	./run_tests.sh
